<% if @summaries.length: %>
  <ul>
    <% for summary in @summaries: %>
      <div class="panel m-summary">
        <div class="large-8 column m-summary--title"><%= summary.title %></div>
        <div class="large-4 column">
          <a class="button success right small m-summary--link" href="<%= summary.document_url %>">
            <i class="icon-file m-summary--link--icon"></i>
            Voir le PDF
          </a>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>
